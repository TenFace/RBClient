<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="130dp">
    <ImageView
        android:id="@+id/iv_item_hotproduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@drawable/product_loading"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:paddingTop="15dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_hotproduct_name"
            style="@style/more_tab_tv_style"
            android:text="商品名"/>
        <TextView
            android:id="@+id/tv_item_hotproduct_ysale"
            style="@style/more_tab_tv_style"
            android:layout_marginTop="3dp"
            android:textColor="#F00"
            android:text="市场价"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView

                style="@style/more_tab_tv_style"
                android:layout_width="wrap_content"
                android:textColor="#F00"
                android:textSize="18sp"
                android:text="￥会员价"/>
            <TextView
                android:id="@+id/tv_item_hotproduct_sale"
                style="@style/more_tab_tv_style"
                android:textColor="#77000000"
                android:text="￥价格"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>