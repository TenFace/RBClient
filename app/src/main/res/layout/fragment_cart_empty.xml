<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_shopcar"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shopcar" />

    <TextView
        android:id="@+id/tv_no_goods1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_shopcar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="您的购物车中没有商品"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_no_goods2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_no_goods1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="快去挑件喜欢商品吧"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_no_goods2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/product_detail_shop_normal"
        android:text="随便逛逛"
        android:textColor="@android:color/white" />

</RelativeLayout>