<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_content_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bar_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_content_fragment_home"
            style="@style/tab_style"
            android:drawableTop="@drawable/bar_home_bg"
            android:text="主页" />

        <RadioButton
            android:id="@+id/rb_content_fragment_search"
            style="@style/tab_style"
            android:drawableTop="@drawable/bar_search_bg"
            android:text="搜索" />

        <RadioButton
            android:id="@+id/rb_content_fragment_brand"
            style="@style/tab_style"
            android:drawableTop="@drawable/bar_brand_bg"
            android:text="品牌" />

        <RadioButton
            android:id="@+id/rb_content_fragment_shopping"
            style="@style/tab_style"
            android:drawableTop="@drawable/bar_shopping_bg"
            android:text="购物车" />

        <RadioButton
            android:id="@+id/rb_content_fragment_more"
            style="@style/tab_style"
            android:drawableTop="@drawable/bar_more_bg"
            android:text="更多" />
    </RadioGroup>

</LinearLayout>