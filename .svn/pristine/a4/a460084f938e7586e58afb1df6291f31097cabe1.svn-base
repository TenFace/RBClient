<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head_bg"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/head_back_normal"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:text="返回"
            android:textSize="16sp" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="搜索结果"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>


    <RadioGroup

        android:id="@+id/rg_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <RadioButton
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/rb_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/segment_selector_1_bg"
            android:button="@null"
            android:text="销量"
            android:textColor="#000000" />

        <RadioButton
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/rb_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/segment_selector_2_bg"
            android:button="@null"
            android:text="价格"
            android:textColor="#000000" />

        <RadioButton
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/rb_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/segment_selector_2_bg"
            android:button="@null"
            android:text="好评度"
            android:textColor="#000000" />

        <RadioButton
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/rb_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/segment_selector_3_bg"
            android:button="@null"
            android:text="上架时间"
            android:textColor="#000000" />
    </RadioGroup>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>