<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/title_tv_style"
            android:text="新增地址"/>
        <Button
            android:id="@+id/btn_address"
            style="@style/title_btn_style"
            android:text="管理地址"/>
        <Button
            android:id="@+id/btn_newaddress_save"
            style="@style/title_btn_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="保存"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/first"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/more_tab_tv_style"
                android:layout_width="wrap_content"
                android:text="收货人:"/>
            <EditText
                android:id="@+id/et_modifyaddress_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#88000000"
                android:background="@null"
                android:text="今敏"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/middle"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/more_tab_tv_style"
                android:layout_width="wrap_content"
                android:text="手机:"/>
            <EditText
                android:id="@+id/et_modifyaddress_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#88000000"
                android:background="@null"
                android:text="123456789"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/middle"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/more_tab_tv_style"
                android:layout_width="wrap_content"
                android:text="省市区:"/>
            <EditText
                android:id="@+id/et_modifyaddress_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#88000000"
                android:background="@null"
                android:hint="北京市朝阳区"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/last"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/more_tab_tv_style"
                android:layout_width="wrap_content"
                android:text="详细地址:"/>
            <EditText
                android:id="@+id/et_modifyaddress_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#88000000"
                android:background="@null"
                android:hint="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>