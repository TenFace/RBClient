<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_helpcenter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/title_tv_style"
                    android:text="结算中心" />

                <Button
                    android:id="@+id/btn_helpcenter_back"
                    style="@style/title_btn_style"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bar_head_button_bg"
                    android:text="购物车" />

                <Button
                    android:id="@+id/btn_next"
                    style="@style/title_btn_style"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bar_head_button_bg"
                    android:text="提交订单" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_username_msg"
                style="@style/more_tab_rl_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/more_tab_tv_style"
                    android:text="收货人信息" />

                <ImageView
                    style="@style/more_tab_iv_style"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_username_payway"
                style="@style/more_tab_rl_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/more_tab_tv_style"
                    android:text="支付方式" />

                <ImageView
                    style="@style/more_tab_iv_style"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_username_time"
                style="@style/more_tab_rl_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/more_tab_tv_style"
                    android:text="送货时间" />

                <ImageView
                    style="@style/more_tab_iv_style"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_username_sendway"
                style="@style/more_tab_rl_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/more_tab_tv_style"
                    android:text="送货方式 :  快递" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_username_discountmethod"
                style="@style/more_tab_rl_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/more_tab_tv_style"
                    android:text="使用优惠券 :  快递" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_username_fapiao"
                style="@style/more_tab_rl_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/more_tab_tv_style"
                    android:text="收取发票" />

                <ImageView
                    style="@style/more_tab_iv_style"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <TextView
                style="@style/more_tab_tv_style"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="#22000000"
                android:padding="10dp"
                android:text="商品明细"

                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:text="高薪就业"
                        android:textColor="#000"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_download_num"
                            style="@style/Detail_Goods"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="颜色：" />

                        <TextView
                            android:id="@+id/tv_version"
                            style="@style/Detail_Goods"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="尺码：" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_date"
                            style="@style/Detail_Goods"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="价格：" />

                        <TextView
                            android:id="@+id/tv_size"
                            style="@style/Detail_Goods"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="数量：" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="小计："
                        android:textColor="#f00"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#22000000">

        <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量总计 :"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1件"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原始金额 :"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥181.00"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费 :"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥10.00"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="促销优惠金额 :"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-¥30.00"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应支付金额  :（不含运费）"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥161.00"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您已享受到以下优惠 :"/>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/moro_tab_bg"
        >

        <TextView
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可享受的优惠活动信息(满增，满减)"/>

    </RelativeLayout>

    <Button
        android:id="@+id/bt_commit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交订单"
        android:textColor="#fff"
        android:background="#ff0000"/>


</LinearLayout>
</ScrollView>