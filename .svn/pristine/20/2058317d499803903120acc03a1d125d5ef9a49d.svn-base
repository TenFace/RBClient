<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow"
                android:padding="5dp"
                android:text="物流查询"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                style="@style/orderdetail_content_left"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:text="订单收货详情" />

            <LinearLayout
                android:id="@+id/ll_order_gooddetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="订单号 :" />

                    <TextView
                        style="@style/orderdetail_content_right"
                        android:gravity="center_horizontal"
                        android:text="10012" />
                </LinearLayout>

                <TextView
                    style="@style/orderdetail_content_left"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="收货人地址" />

                <TextView
                    style="@style/orderdetail_content_right"
                    android:layout_width="match_parent"
                    android:text="姓名" />

                <TextView
                    style="@style/orderdetail_content_right"
                    android:layout_width="match_parent"
                    android:text="13800138000" />

                <TextView
                    style="@style/orderdetail_content_right"
                    android:layout_width="match_parent"
                    android:text="地址" />
            </LinearLayout>

            <TextView
                style="@style/orderdetail_content_left"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:text="订单详情" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="订单状态" />

                    <TextView
                        android:id="@+id/tv_order_state"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="送达状态" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="送货方式" />

                    <TextView
                        android:id="@+id/tv_kuaidi"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="快递" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="支付方式" />

                    <TextView
                        android:id="@+id/tv_fukuanfangshi"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="货到付款" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="订单生成时间" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="送达状态" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="发货时间" />

                    <TextView
                        android:id="@+id/tv_send_time"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="送达状态" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="是否开具发票" />

                    <TextView
                        android:id="@+id/tv_order_isfapiao"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="送达状态" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="发票抬头:" />

                    <TextView
                        android:id="@+id/tv_order_fapiaotaitou"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="送达状态" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="送货要求:" />

                    <TextView
                        android:id="@+id/tv_order_songhuo"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="送达状态" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/orderdetail_content_left"
                android:layout_width="match_parent"
                android:background="#eeeeee"
                android:padding="5dp"
                android:text="商品清单" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:layout_width="wrap_content"
                        android:text="商品名称" />

                    <TextView
                        android:id="@+id/tv_order_goodname"
                        style="@style/orderdetail_content_right"
                        android:layout_width="wrap_content"
                        android:text="唐僧洗发爱飘柔" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/orderdetail_content_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="颜色:" />

                        <TextView
                            android:id="@+id/tv_order_color"
                            style="@style/orderdetail_content_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="红色" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/orderdetail_content_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="尺码:" />

                        <TextView
                            android:id="@+id/tv_order_chima"
                            style="@style/orderdetail_content_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/orderdetail_content_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数量:" />

                        <TextView
                            android:id="@+id/tv_order_num"
                            style="@style/orderdetail_content_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/orderdetail_content_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格:" />

                        <TextView
                            android:id="@+id/tv_order_price"
                            style="@style/orderdetail_content_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#88999999"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="数量总计" />

                    <TextView
                        android:id="@+id/tv_order_totalnum"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="原始金额" />

                    <TextView
                        android:id="@+id/tv_order_yuanshijine"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="运费" />

                    <TextView
                        android:id="@+id/tv_order_yunfei"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="促销优惠金额" />

                    <TextView
                        android:id="@+id/tv_order_youhuijine"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/orderdetail_content_left"
                        android:text="应付金额" />

                    <TextView
                        android:id="@+id/tv_order_shijijine"
                        style="@style/orderdetail_content_right"
                        android:gravity="right"
                        android:text="2" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_selector_loginandregister"
                android:text="取消订单" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>