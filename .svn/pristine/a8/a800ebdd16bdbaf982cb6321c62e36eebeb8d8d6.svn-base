<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="130dp">
    <ImageView
        android:id="@+id/iv_favorite_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@drawable/product_loading"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_favorite_item_name"
            style="@style/more_tab_tv_style"
            android:text="商品名"/>
        <TextView
            android:id="@+id/tv_favorite_item_portfolio"
            style="@style/more_tab_tv_style"
            android:layout_marginTop="3dp"
            android:textColor="#F00"
            android:text="优惠方案"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_favorite_item_sale"
                style="@style/more_tab_tv_style"
                android:layout_width="wrap_content"
                android:textColor="#F00"
                android:textSize="18sp"
                android:text="￥优惠价"/>
            <TextView
                android:id="@+id/tv_favorite_item_original"
                style="@style/more_tab_tv_style"
                android:textColor="#77000000"
                android:text="￥原价"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_favorite_item_evaluate"
            style="@style/more_tab_tv_style"
            android:layout_marginTop="4dp"
            android:textColor="#77000000"
            android:text="评价"/>
    </LinearLayout>

    <ImageView
        style="@style/more_tab_iv_style"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arrow_right" />

</LinearLayout>